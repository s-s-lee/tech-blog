<div class="signup">
    <div class="card w-75">
        <div class="card-header">
            <h4 class="card-title text-center">Sign Up</h4>
        </div>
        <div class="card-body">
            <form class="signup-form">
                <div class="row mb-3">
                    <label for="username-signup" class="col-sm-2 form-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="username-signup" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="email-signup" class="col-sm-2 form-label">Email Address</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="email-signup" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="password-signup" class="col-sm-2 form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password-signup" required>
                    </div>
                </div>
                <div style="text-align:center">
                    <input class="btn btn-primary" type="submit" value="Create an Account">
                </div>
                <a class="login-link" href="/login">
                    Already have an account? Login
                </a>
            </form>            
        </div>
    </div>
</div>

<script src="/js/signup.js"></script>