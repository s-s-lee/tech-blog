{{#each posts as |post|}}
{{!-- <div class="post-entire"> --}}
    <div class="card">
        <div class="card-header text-center">
            <h3 class="card-title"><a href="/posts/{{id}}">{{post.title}}</a></h3>
        </div>
        <div class="card-date mx-3">
            <p class="card-text"><small class="text-muted">Posted by {{post.user.username}} on {{format_date created_on}}</small></p>
        </div>
        <div class="card-body">
            <p>{{post_text}}</p>
        </div>
    </div>
{{!-- </div> --}}
{{/each}}