<div class="login">
    <div class="card w-75">
        <div class="card-header">
            <h4 class="card-title text-center">Login</h4>
        </div>
        <div class="card-body">
            <form class="login-form">
                <div class="row mb-3">
                    <label for="username-login" class="col-sm-2 form-label">Username</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="username-login" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="password-login" class="col-sm-2 form-label">Password</label>
                    <div class="col-sm-10">
                        <input type="password" class="form-control" id="password-login" required>
                    </div>
                </div>
                <div style="text-align:center">
                    <input class="btn btn-primary" type="submit" id="login" value="Sign In">
                </div>
                <a class="signup-link" href="/signup">
                    Don't have an account? Sign Up
                </a>
            </form>            
        </div>
    </div>
</div>

<script src="/js/login.js"></script>