<div class="dashboard">
    {{> allPosts}}
</div>

<div class="add-post" id="new-post-card">
    <div class="card">
        <div class="card-header text-center">
            <h3 class="card-title">Create a New Blog Post</h3>
        </div>
        <div class="card-body">
            <form class="p-2" id="new-post-form">
                <label for="new-post-title" class="form-label">Blog Post Title</label>
                <textarea class="form-control" id="new-post-title" rows="2" placeholder="Post title here"></textarea>
                <label for="new-post-text" class="form-label">Blog Post Content</label>
                <textarea class="form-control" id="new-post-text" rows="4" placeholder="type your blog post content here"></textarea>
                <button type="submit" class="btn btn-primary mt-3" id="new-post-btn"><i class="fas fa-plus"></i> Add new blog post</button>
            </form>            
        </div>
    </div>
</div>

<script src="/js/add-post.js"></script>