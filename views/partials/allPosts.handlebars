<!-- for user's posts on their dashboard -->
{{#each posts as |post|}}
<div class="condensed-post">
    <div class="card">
        <div class="card-header text-center">
            <h3 class="post-title"><a href="/posts/{{id}}">{{title}}</a></h3>
            <div class="post-date">Posted by {{user.username}} at {{format_date created_on}}</div>
        </div>
        {{!-- <div class="card-body">
          <p>{{post_text}}</p>
        </div> --}}
    </div>
</div>
{{/each}}