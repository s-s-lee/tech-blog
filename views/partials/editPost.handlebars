<a class="back-to-dashboard" href="/dashboard">Go back to Dashboard</a>
<div class="edit-post" id="edit-post-card">
    <div class="card mb-2">
        <div class="card-header text-center">
            <h3 class="card-title">Editing</h3>
        </div>
        <div class="card-body">
            <form class="p-2" id="new-post-form">
                <label for="edit-post-title" class="form-label">{{title}}</label>
                <textarea class="form-control" id="edit-post-title" rows="2" placeholder="Blog Post Title"></textarea>
                <label for="edit-post-text" class="form-label">{{post_content}}</label>
                <textarea class="form-control" id="edit-post-text" rows="4" placeholder="Blog Post Content"></textarea>                
            </form>
            <button type="submit" class="btn btn-primary mt-3" data-id="{{post.id}}" id="edit-post-btn">Save changes</button>
            <button type="submit" class="btn btn-danger mt-3" data-id="{{post.id}}" id="delete-post-btn">Delete blog post</button>
        </div>
    </div>
</div>

<script src="/js/edit-post.js"></script>
