<div class="expanded-post-card">
    <div class="card">
        <div class="card-header text-center">
            <h3 class="post-title"><a href="/posts/{{id}}">{{title}}</a></h3>
            <div class="post-date">Posted by {{user.username}} at {{format_date created_on}}</div>
        </div>
        <div class="card-body">
          <p>{{post_content}}</p>
        </div>
    </div>
</div>